{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "semi": 2,
    "linebreak-style": 0,
    "no-param-reassign": 0,
    "no-shadow": 0
  }
}
