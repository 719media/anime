{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 8,
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "root": true,
  "rules": {
    "linebreak-style": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "semi": 2
  }
}
